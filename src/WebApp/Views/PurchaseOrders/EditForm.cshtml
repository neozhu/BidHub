	   </div>
    </div>
 <div class="form-group form-group-sm">
      <div class="row">

		<!--竞标人数-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.BiddingUsers)</span> </label>
            @Html.EditorFor(x => x.BiddingUsers, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.BiddingUsers) } })

        </div>

		<!--最低价-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.MinPrice)</span> </label>
            @Html.EditorFor(x => x.MinPrice, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.MinPrice) } })

